import socket
IPRange = raw_input(\'Enter an IP Address: \')
Port = input(\'Enter the Port Number: \')
a, b, c, d = IPRange.split('.')
for x in range(1, 254):
    ip = a + '.' + b + '.' + c + '.' + str(x)
    s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    s.settimeout(1)
    try:
        s.connect((ip, Port))
    except socket.error:
        continue
    print \'%s: Port Open\' % ip
